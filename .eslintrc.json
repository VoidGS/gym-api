{
	"extends": [
		"@rocketseat/eslint-config/node"
	],
	"rules": {
		"camelcase": "off",
		"no-useless-constructor": "off",
		"prettier/prettier": [
			"error",
			{
				"printWidth": 100,
				"useTabs": true,
				"tabWidth": 4,
				"singleQuote": true,
				"trailingComma": "all",
				"arrowParens": "always",
				"semi": false,
				"endOfLine": "auto"
			}
		]
	}
}